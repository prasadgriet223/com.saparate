<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="scp.com.saparate.controller.jobdetails">
	<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true" focusable="true">
		<App>
			<pages>
				<Page id="idPageBuildResults" title="">
					<headerContent>
						<OverflowToolbar id="tbl1">
							<Button icon="sap-icon://checklist" text="All PipeLines" press="navigatetobuildpipelines"/>
							<ToolbarSpacer/>
							<Button icon="sap-icon://physical-activity" text="Trigger Job" press="initiateTriggerJob"/>
						</OverflowToolbar>
					</headerContent>
					<content>
						<List noDataText="No Data" id="idBuildResults" items="{Jobdetails>/}">
							<items>
								<CustomListItem type="Navigation" id="idBuildResultscustomList" press="navigatetoBuildStages">
									<content>
										<HBox justifyContent="SpaceAround">
											<items>
												<VBox direction="Column">
													<items>
														<ObjectStatus xmlns="sap.m" class="sapUiSmallMargin"
															text="{ parts : [ 'Jobdetails>timeStamp', 'Jobdetails&gt;name' ], formatter: '.formatter.projectbuild' }" state="Information"
															icon="sap-icon://badge"/>
														<HBox>
															<items>
																<Text text="HelloWorld" class="sapUiTinyMargin"/>
																<ObjectStatus state="Information" title="Duration" class="sapUiTinyMargin"
																	text="{ parts : [ 'Jobdetails>duartion' ], formatter: '.formatter.minutes' }" icon="sap-icon://time-entry-request"/>
															</items>
														</HBox>
													</items>
												</VBox>
												<VBox direction="Column">
													<items>
														<GenericTag text="{Jobdetails>buildResult}" design="StatusIconHidden"
															status="{ parts : [ 'Jobdetails>buildResult' ], formatter: '.formatter.buildStatus' }"
															valueState="{ parts : [ 'Jobdetails>buildResult' ], formatter: '.formatter.buildStatus' }" class="sapUiSmallMargin"/>
													</items>
												</VBox>
												<VBox direction="Column">
													<items>
														<ObjectStatus xmlns="sap.m" state="Information" class="sapUiSmallMargin" text="Fri Oct 09 11:56 PM" icon="sap-icon://date-time"/>
														<ObjectStatus xmlns="sap.m" state="Information" class="sapUiSmallMarginBottom" title="Triggered User" text="User"
															icon="sap-icon://key-user-settings"/>
													</items>
												</VBox>
											</items>
										</HBox>
									</content>
								</CustomListItem>
							</items>
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</ScrollContainer>
</mvc:View>